<Window x:Class="DESKTOP_APP.Views.ChooseCategoriesView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DESKTOP_APP.Views"
        mc:Ignorable="d"
        Title="Выбор категорий" Height="250" Width="400" ResizeMode="NoResize" Background="AliceBlue">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" x:Name="mainStackPanel"/>
        <Button x:Name="confirmButton" Grid.Row="1" Content="Подтвердить" Width="200" Height="30" Click="confirmButton_Click"/>
    </Grid>
</Window>
